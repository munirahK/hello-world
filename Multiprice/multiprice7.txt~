*** Setting ***
Library		Selenium2Library
Suite Setup	Go to Internet Security

*** Variables ***
${HOMEPAGE}		https://${DOMAIN}/${LOCALES}/web/home_global/internet-security
${BROWSER}		firefox
${LOCALES}		en
${DOMAIN}		www2.f-secure.gtn

# Multiprice for SKU Test1D12M
${devices_1}		1
${months_1}		12
${price_1}		30
${promo-price_1}	20

# Multiprice for SKU Test3D24M
${devices_2}		3
${months_2}		24
${price_2}		70
${promo-price_2}	60

# Multiprice for SKU Test3D36M
${devices_3}		3
${months_3}		36
${promo-price_3}	99



*** Test Cases ***

Verify Multiprice for SKU Test1D12M
	Page Should Contain Element	//div[@class="table-row"][@data-product="IS"][@data-sku="Test1D12M"]//span[@class="fmp-devices" and contains(text(),'1 device')]
	Number of Devices		${devices_1}
	Page Should Contain Element	//div[@class="table-row"][@data-product="IS"][@data-sku="Test1D12M"]//span[@class="fmp-months" and contains(text(),'12 months')]
	Number of Months		${months_1}
	Page Should Contain Element	//div[@class="table-row"][@data-product="IS"][@data-sku="Test1D12M"]//span[@class="font-pink fmp-onlypromo"]//s[@class="fmp-price" and contains(text(),'€30')]
	Normal Price			${price_1}
	Page Should Contain Element	//div[@class="table-row"][@data-product="IS"][@data-sku="Test1D12M"]//span[@class="fmp-price fmp-promo-price" and contains(text(),'€20')]
	Promo Price			${promo-price_1}
	

Verify Multiprice for SKU Test3D24M
	Page Should Contain Element	//div[@class="table-row"][@data-product="IS"][@data-sku="Test3D24M"]//span[@class="fmp-devices" and contains(text(),'3 devices')]
	Number of Devices		${devices_2}
	Page Should Contain Element	//div[@class="table-row"][@data-product="IS"][@data-sku="Test3D24M"]//span[@class="fmp-months" and contains(text(),'24 months')]
	Number of Months		${months_2}
	Page Should Contain Element	//div[@class="table-row"][@data-product="IS"][@data-sku="Test3D24M"]//span[@class="font-pink fmp-onlypromo"]//s[@class="fmp-price" and contains(text(),'€70')]
	Normal Price			${price_2}
	Page Should Contain Element	//div[@class="table-row"][@data-product="IS"][@data-sku="Test3D24M"]//span[@class="fmp-price fmp-promo-price" and contains(text(),'€60')]
	Promo Price			${promo-price_2}

Verify Multiprice for SKU Test3D36M
	Page Should Contain Element	//div[@class="table-row"][@data-product="IS"][@data-sku="Test3D36M"]//span[@class="fmp-devices" and contains(text(),'3 devices')]
	Number of Devices		${devices_3}
	Page Should Contain Element	//div[@class="table-row"][@data-product="IS"][@data-sku="Test3D36M"]//span[@class="fmp-months" and contains(text(),'36 months')]
	Number of Months		${months_3}
	Page Should Contain Element	//div[@class="table-row"][@data-product="IS"][@data-sku="Test3D36M"]//span[@class="fmp-price fmp-promo-price" and contains(text(),'€99')]
	Promo Price			${promo-price_3}
	

*** Keywords ***

