*** Setting ***
Library		Selenium2Library
Suite Setup	Go to Internet Security

*** Variables ***
${HOMEPAGE}		https://${DOMAIN}/${LOCALES}/web/home_${SITE}/internet-security
${BROWSER}		firefox
${LOCALES}		en, ru_RU
${DOMAIN}		www2.f-secure.gtn
${SITE}			global, ru
${CURRENCY}		€, £, $, py6, MYR
${POSITION}		0, 1


# Multiprice for SKU Test1D12M
${devices_1}		1
${months_1}		12
${price_1}		10
${promo-price_1}	20

# Multiprice for SKU Test3D24M
${devices_2}		3
${months_2}		24
${price_2}		70
${promo-price_2}	60

# Multiprice for SKU Test3D36M
${devices_3}		3
${months_3}		36
${promo-price_3}	99

# Multiprice for SKU Test1D48M
${devices_4}		1
${months_4}		48
${price_4}		200
${promo-price_4}	190

# Locator for SKU

${locator_Test1D12M}		//div[@class="table-row"][@data-product="IS"][@data-sku="Test1D12M"]
${locator_Test3D2M}		//div[@class="table-row"][@data-product="IS"][@data-sku="Test3D24M"]
${locator_Test3D36M}		//div[@class="table-row"][@data-product="IS"][@data-sku="Test3D36M"]
${locator_Test1D48M}		//div[@class="table-row"][@data-product="IS"][@data-sku="Test1D48M"]

# Locator for devices, months, price, and promo price

${locator_devices}		/div/span/span[@class="fmp-devices"]
${locator_months}		/div/span/span[@class="fmp-months"]
${locator_price}		/div/span[@class="font-pink fmp-onlypromo"]//s[@class="fmp-price"]
${locator_promo-price}		/div/span[@class="fmp-price fmp-promo-price"]



*** Test Cases ***

Test Multiprice for SKU Test1D12M
	Locate Devices		${locator_Test1D12M}${locator_devices}	${devices_1}	
	Locate Months		${locator_Test1D12M}${locator_months}	${months_1}
	Locate Price		${locator_Test1D12M}${locator_price}	${price_1}	${POSITION}
	Locate Promo Price	${locator_Test1D12M}${locator_promo-price}	${promo-price_1}	${POSITION}	

