*** Setting ***
Library		Selenium2Library
Suite Setup	Go to Internet Security	

*** Variables ***
${HOMEPAGE}		https://${DOMAIN}/${LOCALES}/web/home_global/internet-security
${BROWSER}		firefox
${LOCALES}		en
${DOMAIN}		www2.f-secure.gtn


		

*** Test Cases ***

Element 1
	//div[@data-sku="Test1D12M"]		1	12	30	20

Element 2
	//div[@data-sku="Test3D24M"]		3	24	70	60
					
Element 3
	//div[@data-sku="Test3D36M"]		3	36	99	
	
			


*** Keywords ***
//div[@data-sku="Test1D12M"]
	[Arguments]	${devices}	${months}	${price}	${promo-price}	
	
	Wait Until Page Contains	${devices}=	Get Text ${locator_devices}	
	Page Should Contain Element	//span[@class="fmp-devices" and contains(text(),'2 device')]	
	
	Wait Until Page Contains	${months}
	Page Should Contain Element	//span[@class="fmp-months" and contains(text(),'12 months')]

	Wait Until Page Contains	${price}	
	Page Should Contain Element	//span[@class="font-pink fmp-onlypromo"]//s[@class="fmp-price" and contains(text(),'€30')]

	Wait Until Page Contains	${promo-price}	
	Page Should Contain Element	//span[@class="fmp-price fmp-promo-price" and contains(text(),'€20')]	
	
//div[@data-sku="Test3D24M"]
	[Arguments]	${devices}	${months}	${price}	${promo-price}	
	Wait Until Page Contains	${devices} 
	Page Should Contain Element	//span[@class="fmp-devices" and contains(text(),'3 devices')]	
	

	Wait Until Page Contains	${months}
	Page Should Contain Element	//span[@class="fmp-months" and contains(text(),'24 months')]

	Wait Until Page Contains	${price}
	Page Should Contain Element	//span[@class="font-pink fmp-onlypromo"]//s[@class="fmp-price" and contains(text(),'€70')]

	Wait Until Page Contains	${promo-price}
	Page Should Contain Element	//span[@class="fmp-price fmp-promo-price" and contains(text(),'€60')]	
	


		
//div[@data-sku="Test3D36M"]
	[Arguments]	${devices}	${months}	${promo-price}
	
	Wait Until Page Contains	${devices}	
	Page Should Contain Element	xpath=//span[@class="fmp-devices" and contains(text(),'3 devices')]

	Wait Until Page Contains	${months}
	Page Should Contain Element	//span[@class="fmp-months" and contains(text(),'36 months')]

	Wait Until Page Contains	${promo-price}
	Page Should Contain Element	//span[@class="fmp-price fmp-promo-price" and contains(text(),'€99')]

Go to Internet Security	
