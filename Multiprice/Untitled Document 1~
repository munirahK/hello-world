	[Arguments]		${devices1}	${months1}	${price1}	${promo-price1}
	Run Keyword If		'${devices1}'=='${devices_1}'		
		Page Should Contain	1 device
		ELSE
		Log ${devices1}

	Run Keyword If		'${months1}'=='${months_1}'	
		Page Should Contain	12 months
		ELSE
		Log ${months1}
		
	Run Keyword If		'${price1}'=='${price_1}'	
		Page Should Contain	€30
		ELSE
		Log ${price1}

	Run Keyword If		'${promo-price1}'=='${promo-price_1}'	
		Page Should Contain	€20
		ELSE
		Log ${promo-price1}


Create List
	[Arguments]	${devices}	${months}	${price}	${promo-price}	
	Should Be Equal		${devices}	${devices_1}
	Should Be Equal		${months}	${months_1}
	Should Be Equal		${price}	${price_1}
	Should Be Equal		${promo-price}	${promo-price_1}

